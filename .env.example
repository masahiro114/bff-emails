# Application
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
MAX_JSON_BODY_BYTES=5242880

# Redis
REDIS_URL=redis://redis:6379
REDIS_NAMESPACE=bff-mail
MAIL_QUEUE_NAME=mail-queue

# Postgres
POSTGRES_URL=postgres://bff_mail:bff_mail@postgres:5432/bff_mail

# Template configuration
TEMPLATE_CONFIG_PATH=./config/templates.json

# Secrets for sample policies
ONBOARDING_JWT_SECRET=super-secret
HCAPTCHA_SECRET=placeholder-secret

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=no-reply@example.com
SENDGRID_FROM_NAME=BFF Mailer
